def sigmoid(z):
    return 1 / (1 + np.exp(-z))

z = np.linspace(-10, 10, 51)
y = sigmoid(z)
plt.plot(z, y)


def linear_regression(xi, w0, w):
    result = w0
    for j in range(len(w)):
        result += xi[j]*w[j]
    return result

def logistic_regression(xi, w0, w):
    score = w0
    for j in range(len(w)):
        score += xi[j]*w[j]
    result = sigmoid(score)
    return result





